---
    import { getAllBlogs } from "../../api/blogs";
    import BlogCard from "./Card.astro";

    const blogs = await getAllBlogs()
---

<section id="blogs" class="pb-5 bg-gradient-to-b from-white from-[20%] to-[#922cfb]">
    <div class="container mx-auto p-4">
        <h2 class="text-2xl font-bold text-black mt-5">Useful Articles</h2>
        <div class="grid grid-cols-6 gap-4 mt-5">
            {blogs.data.map((item) => {
            return <a href={`/blogs/${item.slug}`}
                class="flex flex-col h-full bg-white shadow-lg rounded-md col-span-4 md:col-span-3 lg:col-span-2">
                <BlogCard title={item.title} subTitle={item.sub_title}
                    src={item.featured_image_url} alt="blog" />
            </a>
            })}
        </div>
    </div>
</section>
