---

<section class="bg-white">
    <div class="p-4 mx-auto container">
        <h2 class="text-2xl font-bold text-black mt-5">Our Story</h2>
        <div class="grid grid-cols-1 md:grid-cols-5">
            <div class="text-black mb-5 col-span-3" id="our-story">
                {content.map((it) => <p class="mt-3" set:html={it} />)}
            </div>
            <div
                class="col-span-2 text-slate-800 flex flex-col justify-center items-center bg-slate-100 p-8 md:py-0 rounded-lg text-center"
            >
                <div class="flex justify-center items-center mb-4">
                    <img src="/assets/images/ourstory.svg" alt="audio to seo optimized content" width="500" />
                </div>
                Audio to Value in Seconds
