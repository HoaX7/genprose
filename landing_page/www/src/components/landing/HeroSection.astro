<style>
    .avw {
        display: inline-block;
        height: 36px;
        position: relative;
        background: #f4da35;
        width: 152px;
        margin-top: 0.25rem;
        overflow: hidden;
        position: relative;
        top: 8px;
        padding: 2px 8px;
        color: #222;
    }
    .avw-content {
        position: absolute;
        transform: translateY(0);
        animation: moveup 3s cubic-bezier(0.4, 0, 1, 1) infinite forwards;
    }
    @keyframes moveup {
        0% {
            transform: translateY(-0.4rem);
        }
        33.3% {
            transform: translateY(-3.4rem);
        }
        66% {
            transform: translateY(-6.8rem);
        }
    }
