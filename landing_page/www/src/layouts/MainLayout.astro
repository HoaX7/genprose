---
    import "../styles/global.css"
import Footer from "./Footer.astro";
---

<html lang="en">

<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="icon" type="image/png" href="/favicon.png">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="sitemap" type="application/xml" title="Sitemap" href="/sitemap.xml">
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={Astro.props.description} />
    <link rel="canonical" href={`https://genprose.com${Astro.props.url}`} />
    <meta property="og:url" content={`https://genprose.com${Astro.props.url}`} />
    <meta name="og:title" property="og:title" content={Astro.props.title} />
    <meta name="og:description" property="og:description" content={Astro.props.description} />
    <meta name="twitter:title" content={Astro.props.title} />
    <meta name="twitter:description" content={Astro.props.description} />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:creator" content="@hoaxy777" />
    <meta property="og:locale" content="en_US" />
    <meta name="keywords" content={Astro.props.keywords} />
    <meta property="og:image" content="https://genprose.com/assets/images/og-image.jpg" />
    <meta property="image" content="https://genprose.com/assets/images/og-image.jpg" />
    <title>{Astro.props.title}</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Plus Jakarta Sans:r,b">
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-2XKMY8V0DX"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'G-2XKMY8V0DX');
    </script>
</head>

<body>
    <slot />
    <Footer />
</body>

</html>