    <meta name="twitter:title" content={Astro.props.title} />
    <meta name="twitter:description" content={Astro.props.description} />
    <meta property="og:locale" content="en_US" />
    <meta name="keywords" content={Astro.props.keywords} />
    <meta property="og:image" content="https://genprose.com/styles/images/logo-white-img.png" />
    <meta property="image" content="https://genprose.com/styles/images/logo-white-img.png" />
